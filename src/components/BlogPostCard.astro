---
const { blogPost } = Astro.props;
---

<article class="h-full flex flex-col">
  {blogPost.featuredImage && (
    <img 
      src={blogPost.featuredImage.url || "/placeholder.svg"} 
      alt={blogPost.featuredImage.alt || blogPost.title} 
      class="w-full h-48 object-cover mb-4"
    />
  )}
  <h3 class="text-xl font-semibold mb-2">{blogPost.title}</h3>
  {blogPost.excerpt && <p class="text-muted-foreground mb-4">{blogPost.excerpt}</p>}
  {blogPost.categories && blogPost.categories.length > 0 && (
    <ul class="flex flex-wrap gap-2 mb-4">
      {blogPost.categories.map(category => (
        <li class="bg-muted text-muted-foreground px-3 py-1 text-sm">
          <a href={`/categories/${category.slug}`}>{category.title}</a>
        </li>
      ))}
    </ul>
  )}    
  <a 
    href={`/blog/${blogPost.slug}`} 
    class="mt-auto inline-block bg-foreground text-background px-4 py-2 hover:bg-primary hover:text-primary-foreground transition-colors"
  >
    Read More
  </a>
</article>

